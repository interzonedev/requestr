<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
						http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
						http://www.springframework.org/schema/context
						http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:component-scan base-package="com.interzonedev.requestr.service" />

	<bean id="httpConnectionManager" class="org.apache.http.impl.conn.PoolingClientConnectionManager">
		<property name="defaultMaxPerRoute" value="200" />
		<property name="maxTotal" value="100" />
	</bean>

	<bean id="httpClient" class="org.apache.http.impl.client.DefaultHttpClient">
		<constructor-arg index="0" ref="httpConnectionManager" />
	</bean>

	<bean id="keystoreFilePath" class="java.lang.String">
		<constructor-arg value="com/interzonedev/requestr/ssl/client-truststore.jks" />
	</bean>

	<bean id="keystorePassword" class="java.lang.String">
		<constructor-arg value="password" />
	</bean>

	<bean id="requestService" class="com.interzonedev.httpagent.HttpComponentsRequestService">
		<!-- maxTotalHttpConnections -->
		<constructor-arg index="0" value="50" />
		<!-- defaultMaxHttpConnectionsPerRoute -->
		<constructor-arg index="1" value="10" />
		<!-- coreThreadPoolSize -->
		<constructor-arg index="2" value="50" />
		<!-- maximumThreadPoolSize -->
		<constructor-arg index="3" value="100" />
	</bean>
</beans>
